{% extends 'base.html.twig' %}
{% block title %}Add New Product{% endblock %}
{% block stylesheet %}
    <link href="{{ asset('css/bootstrap-toggle.min.css') }}" rel="stylesheet">

{% endblock %}
{% block contentTitle %}
    New Customer <small>This is the location where you can add new Customer!</small>
{% endblock %}
{% block body %}

    <!-- Main content -->
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                {#            <h3 class="box-title">General Elements</h3>#}
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                {{ form_start(form,{'attr':{'id':'addNewCustomerForm'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.cusName, 'Customer Name:') }}
                            {{ form_widget(form.cusName,{'attr':{'autocomplete':'off'}}) }}
                            {{ form_errors(form.cusName, {'attr': {'class':'help-block'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.cusPhone, 'Customer Phone:') }}
                            {{ form_widget(form.cusPhone,{'attr':{'autocomplete':'off'}}) }}
                            {{ form_errors(form.cusPhone, {'attr': {'class':'help-block'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.cusAddress, 'Address:') }}
                            {{ form_widget(form.cusAddress) }}
                            {{ form_errors(form.cusAddress, {'attr': {'class':'help-block'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-md-offset-5 ">
                        <div class="form-group">
                            {{ form_widget(form.status) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 pull-right">
                        <div class="form-group">
                            {{ form_widget(form.Submit, {'label': 'Save', 'attr':{'class': 'btn-flat btn-primary pull-right text-white w-10'}}) }}
                        </div>
                    </div>
                </div>

                {#            {{ form_end(form) }}#}
            </div>
            <!-- /.box-body -->
        </div>

    </section>
{% endblock %}
{% block javascripts %}

    <script src="{{ asset('js/bootstrap-toggle.min.js') }}"></script>
{% endblock %}