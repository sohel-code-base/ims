{% extends 'base.html.twig' %}
{% block title %}{{ app.user.fullName }} | IE{% endblock %}

{% block stylesheet %}
{% endblock %}

{% block contentTitle %}
    My Profile
{% endblock %}
{% block body %}

    <!-- Main content -->
    <section class="content">
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-3 text-center">
                        <img class=""
                             src="/uploads/photo/{{ app.user.photo }}" alt="User profile picture" style="border: 3px solid #ccc; padding: 3px; box-shadow: 1px 0px 10px 5px #4444443b;">
                        <h3 class="profile-username text-center">{{ app.user.fullName }}</h3>
                        <p class="text-muted text-center">{{ app.user.designation }}</p>
                    </div>
                    <div class="col-md-5">
                        <h4><strong>Username: </strong>{{ app.user.username }}</h4>
                        <h4><strong>Phone: </strong>{{ app.user.phone }}</h4>
                        <h4><strong>Job
                                Status: {{ app.user.jobStatus == 1 ? '<span class="label label-success">Permanent</span>' : '<span class="label label-danger">Probation</span>' }}
                        </h4>
                        <h4><strong>Access Level: </strong>
                            {% for role in app.user.roles %}

                                {% set splitRole = role|split('_') %}

                                {% for userRole in splitRole %}
                                    {{ not loop.first ? userRole }}
                                {% endfor %}

                                {{ not loop.last ? ', ' }}

                            {% endfor %}
                        </h4>
                        <h4><strong>Address: </strong>{{ app.user.address }}</h4>
                        <h4><strong>Signature: </strong></h4>
                        {% if app.user.signature is not null %}
                            <img src="{{ asset('/uploads/signature/') ~ app.user.signature }}" alt="Employee signature">
                        {% endif %}
                    </div>
                    <div class="col-md-2"></div>
                </div>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
{% endblock %}

{% block javascripts %}

{% endblock %}
