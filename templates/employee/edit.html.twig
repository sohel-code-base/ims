{% extends 'base.html.twig' %}

{% block title %}Update | IE{% endblock %}
{% block stylesheet %}
    <link href="{{ asset('css/bootstrap-toggle.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('/css/animate.min.css') }}">
    <!-- bootstrap datepicker -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/blue.css') }}">
    <style>
        .checkbox label, .radio label {
            padding-left: 10px;
            margin-bottom: 15px;
            font-weight: 700;
        }
        .preview-user-photo img{
            width: 120px;
            height: 120px;
            margin: 0 auto;
            border: 1px solid #ccc;
            padding: 5px;
        }
        .preview-user-signature img{
            width: 100%;
            height: 50px;
            margin: 0 auto;
            border: 1px solid #ccc;
            padding: 5px;
        }
        .invalid-feedback{
            display: block;
            font-weight: normal;
            color: red;
        }
        .invalid-feedback .badge{
            display: none;
        }
    </style>
{% endblock %}

{% block contentTitle %}
    Edit Employee! <small>Edit employee details!</small>
{% endblock %}
{% block body %}

    <!-- Main content -->
    <section class="content">
{#        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}#}
        <div class="box box-primary">
            <div class="box-header with-border">
                {#            <h3 class="box-title">General Elements</h3>#}
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                {{ form_start(form) }}

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.fullName, 'Full Name') }}
                            {{ form_widget(form.fullName,{'attr':{'autocomplete':'off','placeholder':'Name'}}) }}

                            {{ form_label(form.designation, 'Designation') }}
                            {{ form_widget(form.designation,{'attr':{'autocomplete':'off','placeholder':'Designation'}}) }}

                            {{ form_label(form.phone, 'Phone') }}
                            {{ form_widget(form.phone,{'attr':{'autocomplete':'off','placeholder':'Phone Number'}}) }}

                            {{ form_label(form.address) }}
                            {{ form_widget(form.address,{'attr':{'autocomplete':'off','placeholder':'Address'}}) }}

                            {{ form_label(form.joiningDate) }}
                            {{ form_widget(form.joiningDate,{'id': 'datepicker', 'attr':{'autocomplete':'off','placeholder':'dd-mm-yyyy'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.roles, 'Access', {'label_attr': {'class': 'bg-gray', 'style': 'padding-left: 10px; margin-top:10px'}}) }}
                            {{ form_widget(form.roles, {'attr': {'class': 'checkbox'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group bg-gray-light" style="padding: 0px 15px">
                            {{ form_label(form.username, 'Username') }}
                            {{ form_widget(form.username,{'attr':{'autocomplete':'off','placeholder':'Username'}}) }}

                            {{ form_label(form.password, 'Password') }}
                            {{ form_widget(form.password,{'type': 'text','attr':{'autocomplete':'off','placeholder':'Password'}}) }}
                            {{ form_help(form.password, {'help': 'Note:Type previous password or add new!'}) }}
                        </div>
                        <div class="row" style="padding-left: 14px; min-height: 250px">
                            <div class="col-md-6">
                                <div class="form-group margin-bottom-none">
                                    {{ form_label(form.photo) }}
                                    {{ form_widget(form.photo, {'id': 'uploadPhoto'}) }}
                                </div>
                                <div class="form-group preview-user-photo text-center">
                                    {% if form.vars.employeePhoto is not null %}
                                        <img src="{{ form.vars.employeePhoto }}" alt="">
                                    {% endif %}
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group margin-bottom-none">
                                    {{ form_label(form.signature) }}
                                    {{ form_widget(form.signature, {'id': 'uploadSignature'}) }}
                                </div>
                                <div class="form-group preview-user-signature">
                                    {% if form.vars.employeeSignature is not null %}
                                        <img src="{{ form.vars.employeeSignature }}" alt="">
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <label for="">Job Status</label>
                            {{ form_widget(form.jobStatus) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        {{ form_widget(form.Save) }}
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <!-- bootstrap datepicker -->
    <script src="{{ asset('/js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ asset('/js/sweetalert2.min.js') }}"></script>
    <script src="{{ asset('js/icheck.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap-toggle.min.js') }}"></script>
    <script src="{{ asset('js/employee.js') }}"></script>


    <script>
        $(function () {
            $("#datepicker").datepicker({
                autoclose: true,
                todayHighlight: true,
                format: 'dd-mm-yyyy',
            });
        });

        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });

        //iCheck for checkbox and radio inputs
        $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue',
            radioClass   : 'iradio_minimal-blue'
        })
    </script>
{% endblock %}
