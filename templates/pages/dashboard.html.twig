{% extends 'base.html.twig' %}
{% block title %} Dashboard {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/dataTables.bootstrap5.min.css') }}">
{#    <link rel="stylesheet" href="{{ asset('css/jquery-ui.min.css') }} ">#}
{#    <link rel="stylesheet" href="{{ asset('css/jquery-ui.theme.min.css') }} ">#}
{% endblock %}

{% block body %}
    {% include('inc/nav.html.twig') %}
{#    {{ render(controller('App\\Controller\\ProductController::addProduct')) }}#}


    {% for messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}


{#{% include 'inc/sidebar.html.twig' %}#}

    <div class="container-fluid py-4">
        <div class="row h-100 overflow-hidden">
            <div class="col-md-3">
                <ul class="">
                    <li class="nav-item"><a href="{{ path('product_create') }}" class="nav-link bg-info" style="color: #03045e;"><i class="far fa-plus-square"></i> Add Product</a></li>
                    <li class="nav-item"><a href="{{ path('product_create') }}" class="nav-link bg-primary" style="color: #03045e;"><i class="far fa-plus-square"></i> Add Category</a></li>
                    <li class="nav-item"><a href="{{ path('product_create') }}" class="nav-link bg-warning" style="color: #03045e;"><i class="far fa-plus-square"></i> Add Product Type</a></li>
                    <li class="nav-item"><a href="{{ path('product_create') }}" class="nav-link bg-secondary" style="color: #03045e;"><i class="far fa-plus-square"></i> Add Product Type</a></li>
                    <li class="nav-item"><a href="{{ path('product_create') }}" class="nav-link bg-danger" style="color: #03045e;"><i class="far fa-plus-square"></i> Add Product Type</a></li>
                    <li class="nav-item"><a href="{{ path('product_create') }}" class="nav-link bg-dark" style="color: #03045e;"><i class="far fa-plus-square"></i> Add Product Type</a></li>
                </ul>
            </div>
            <div class="col-md-9 overflow-scroll h-100">
                <table class="table table-striped table-bordered dataTables_scrollBody" id="product-table">
                    <thead class="bg-secondary text-white">
                    <tr>
                        <th>{{ 'Sl No.'|trans }}</th>
                        <th>{{ 'Products Name'|trans }}</th>
                        <th>{{ 'Quantity'|trans }}</th>
                        <th>{{ 'Purchase Date'|trans }}</th>
                        <th>{{ 'Action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ loop.index|trans }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.quantity }}</td>
                            <td>{{ product.purchaseDate|date('d/m/Y') }}</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="" class="btn btn-success"><i class="fas fa-eye"></i></a>
                                    <a href="" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#product-table').DataTable({
                "pagingType":"simple_numbers"
            });
        } );
    </script>
{% endblock %}


