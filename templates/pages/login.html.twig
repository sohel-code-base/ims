{% extends 'base.html.twig' %}
{% block title %} System Login {% endblock %}
{% block body %}
    <div class="container-fluid w-100 h-100" id="login-page">
        <div class="row align-items-center h-100">
            <div class="col-md-4 mx-auto position-relative">
                <div class="avater text-white align-items-center justify-content-center d-flex mx-auto position-absolute rounded-circle border border-3 border-warning">
                    <i class="fas fa-user"></i>
                </div>
                <div class="card">
                    <div class="card-header text-white bg-primary border-3 border-bottom border-warning">
                        <h3 class="text-center">Login</h3>
                    </div>
                    <div class="card-body p-5">
                        <form action="{{ path('app_dashboard') }}">
                            <div class="input-group form-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text px-3 py-3 bg-warning"><i
                                                class="fas fa-user"></i></span>
                                </div>
                                <input type="text" class="form-control py-2" placeholder="username">

                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text px-3 py-3 bg-warning"><i
                                                class="fas fa-key"></i></span>
                                </div>
                                <input type="password" class="form-control" placeholder="password">
                            </div>
                            <div class="form-group d-grid gap-2 mt-5">
                                <input type="submit" value="Login" class="btn btn-outline-warning">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
