{% extends 'base.html.twig' %}
{% block title %}Add New Category{% endblock %}
{% block stylesheet %}
    <link href="{{ asset('css/bootstrap-toggle.min.css') }}" rel="stylesheet">
{% endblock %}
{% block contentTitle %}
    Add New Category <small>This is the location where you are able to add new category!</small>
{% endblock %}
{% block body %}
    <!-- Main content -->
    <section class="content">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="icon fa fa-{{ type == 'error' ? 'warning':'check' }}"></i>{{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="box box-primary">
            <div class="box-header with-border">
                {#            <h3 class="box-title">General Elements</h3>#}
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                {{ form_start(form,{'attr':{'id':'addNewCategoryForm'}}) }}
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="form-group">
                            {{ form_label(form.name, 'Category Name:') }}
                            {{ form_widget(form.name,{'attr':{'placeholder':'e.g. Light'}}) }}
                            {{ form_errors(form.name, {'attr': {'class':'help-block'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2 col-md-offset-5 ">
                        <div class="form-group">
                            {{ form_widget(form.status, {'attr':{'checked':'checked'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 pull-right">
                        <div class="form-group">
                            {{ form_widget(form.Submit, {'label': 'Save', 'attr':{'class': 'btn-flat btn-primary pull-right text-white w-10'}}) }}
                        </div>
                    </div>
                </div>

                {#            {{ form_end(form) }}#}
            </div>
            <!-- /.box-body -->
        </div>

    </section>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/bootstrap-toggle.min.js') }}"></script>
{% endblock %}



