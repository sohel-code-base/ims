{% extends 'base.html.twig' %}

{% block title %}Islamia Enterprise!{% endblock %}

{% block stylesheet %}
    <!-- DataTables -->
    <link rel="stylesheet" href="{{ asset('/css/dataTables.bootstrap.min.css') }}">
    <style>
        @media print {
            body * {
                visibility: hidden;
            }

            .modal * {
                visibility: visible;
                overflow: visible;
            }
            .modal-header button.close{
                display: none;
            }

            .modal-footer {
                /*visibility: hidden;*/
                display: none;
            }

            .modal-header h3 {
                text-align: left !important;
                background-color: red !important;
                color: #fff !important;
            }
        }
    </style>
{% endblock %}

{% block contentTitle %}
    Sale Archive <small>Previous sales here</small>
{% endblock %}
{% block body %}

    <!-- Main content -->
    <section class="content">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="icon fa fa-check"></i>{{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}

        <!-- /.box -->

        <div class="box">
            <div class="box-header">
                <h3 class="box-title"><i class="fa fa-th-list" style="margin-right: 5px;"></i>List </h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    {#                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>#}
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="productTable" class="table">
                    <thead>
                    <tr>
                        <th width="10" class="text-center">{{ 'S/N'|trans }}</th>
                        <th>{{ 'Customer Name'|trans }}</th>
                        <th>{{ 'Total Price'|trans }}</th>
                        <th>{{ 'Status'|trans }}</th>
                        <th>{{ 'Sale Date'|trans }}</th>
                        <th width="20%"><i class="fa fa-gear"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if allSales is not empty and allSales is iterable %}
                        {% for sale in allSales %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ sale.customerName|default('N/A') }}</td>
                                <td>{{ sale.orderTotalPrice|default(0) }}</td>
                                <td>{{ sale.status == 1 ? "<span class = 'label label-success'>Delivered!</span>" : "<span class = 'label label-warning'>Pending!</span>" }}</td>
                                <td>{{ sale.orderDate|date('d-m-Y')|default('N/A') }}</td>
                                <td>
                                    <div class="btn-group pull-right">
{#                                        {{ path('show_sale_details',{'customerId': sale.customerId, 'orderDate':sale.orderDate|date('Y-m-d')}) }}#}
                                        <a href="" class="btn btn-sm bg-purple btn-flat show-sale-details"  data-toggle="modal" data-target="" data-action="{{ path('show_sale_details') }}" data-customer-id="{{ sale.customerId }}" data-order-date="{{ sale.orderDate|date('Y-m-d') }}"><i class="fa fa-eye"><span style="margin-left: 3px;">Show</span></i></a>

                                        <a href="" class="btn btn-sm bg-navy btn-flat"><i class="fa fa-edit"><span style="margin-left: 3px;">Edit</span></i></a>
                                        <a href="" class="btn btn-sm bg-maroon btn-flat delete-record"><i class="fa fa-trash"><span style="margin-left: 3px;">Delete</span></i></a>
                                    </div>

                                </td>
                            </tr>

                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="10" align="center">{{ 'No record found!' }}</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

          <!-- Modal for details view -->
            <div class="modal fade sale-details" id="saleDetails">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span></button>
                            <table width="100%">
                                <thead>
                                <tr>
                                    <th colspan="2" style="text-align: center">
                                        <h4>{{ 'ISLAMIA ENTERPRISE'|trans }}</h4>
                                        <p><em>{{ 'Electrical appliances wholesale centre'|trans }}</em></p>
                                        <p>{{ 'Hazi Mansion (2nd Floor), Salna Bazar, Gazipur-1700'|trans }}</p>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td><p class="text-center">{{ 'Phone: 01996647842, 01408552205, 01915138563'|trans }}</p></td>
                                    <td><p class="text-center">{{ 'Email: isenonline@gmail.com'|trans }}</p></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="modal-body">
                            <table class="table table-bordered">
                                <thead class="bg-primary">
                                <tr>
                                    <th>{{ 'Product'|trans }}</th>
                                    <th>{{ 'Quantity'|trans }}</th>
                                    <th>{{ 'Rate'|trans }}</th>
                                    <th>{{ 'Total'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <div class="modal-footer text-center">
                            <a href="javascript:window.print()" class="btn bg-purple btn-flat">Print <i class="fa fa-print"></i></a>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->

    </section>
    <!-- /.content -->
{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script src="{{ asset('/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('/js/saleDetails.js') }}"></script>
    <!-- page script -->
    <script>
        $(function () {
            $('#productTable').DataTable({
                "columnDefs":[{
                    "targets": -1,
                    "orderable": false
                }]
            })
        });

/*        if (typeof jQuery != 'undefined') {
            // jQuery is loaded => print the version
            alert(jQuery.fn.jquery);
        }*/


    </script>

{% endblock %}
